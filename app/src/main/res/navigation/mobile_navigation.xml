<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_trigger">

    <fragment
        android:id="@+id/navigation_trigger"
        android:name="com.example.prioping.ui.trigger.TriggerFragment"
        android:label="@string/title_trigger"
        tools:layout="@layout/fragment_trigger" />

    <fragment
            android:id="@+id/navigation_action"
            android:name="com.example.prioping.ui.action.ActionFragment"
            android:label="@string/title_trigger"
            tools:layout="@layout/fragment_action" />

    <fragment
        android:id="@+id/navigation_logs"
        android:name="com.example.prioping.ui.logs.LogsFragment"
        android:label="@string/title_logs"
        tools:layout="@layout/fragment_logs" />

</navigation>
